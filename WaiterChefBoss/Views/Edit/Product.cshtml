@model ProductFormViewModel

@{
    ViewBag.Title = $"Edit Product {@Model.Name}";

}


<h2 class="text-center">Edit product <a asp-controller="Food" asp-action="Product" asp-route-id="@Model.Id">@Model.Name</a></h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Product" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit">Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label-add-edit">ImageUrl</label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Calories" class="form-label-add-edit">Calories</label>
                <input asp-for="@Model.Calories" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Calories" class="text-danger"></span>
            </div>
 
            <div class="mb-3">
                <label asp-for="@Model.TimeCooking" class="form-label-add-edit">Edit Time for Cooking</label>
                <input asp-for="@Model.TimeCooking" class="form-control" value="@Model.TimeCooking" />
                <span asp-validation-for="@Model.TimeCooking" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Price" class="form-label-add-edit">Edit Price</label>
                <input asp-for="@Model.Price" class="form-control" value="@Model.Price.ToString().Replace(",",".")" />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Status" class="form-label-add-edit">Edit Status</label>
                <input asp-for="@Model.Status" class="form-control" value="1" />
                <span asp-validation-for="@Model.Status" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.CategoryId" class="form-label-add-edit">Edit Category</label>
                <select asp-for="@Model.CategoryId" class="form-control" aria-required="true">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Save" />
            </div>
        </form>
        <div class="mb-3">
            <form asp-action="DeleteProduct" asp-route-id="@Model.Id" method="post">
                <input class="btn btn-danger mb-2 w-100 p-3 fw-bold" type="submit" value="Delete" />
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

