@model IEnumerable<ReviewViewModel> 

     
@{
    ViewData["Title"] = $"Reviews for {Model.FirstOrDefault()!.ProductName}";
}


<h1 class="text-center">@ViewData["Title"]</h1>
 
@if (Model.Count() > 0)
{
    <h2>Average rating @Model.FirstOrDefault()!.AverageStars from @Model.Count() reviews</h2>

}
else
{
    <h2>No reviews yet</h2>
}
<form asp-action="Add" asp-route-id="@Model.FirstOrDefault()!.ProductId" method="get">
    <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" value="Review @Model.FirstOrDefault()!.ProductName" type="Submit">
</form>
<hr />
@foreach(var review in Model){
    <div class="mb-3">
        <h2>@review.Title</h2>
        <p>Review: @review.Description</p>
        <p>Stars: @review.Stars</p>
        
</div>
 
}
